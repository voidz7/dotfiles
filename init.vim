call plug#begin('~/.vim/plugged/')
Plug 'sainnhe/gruvbox-material'
call plug#end()

inoremap jk <Esc>

set number
set hidden
set termguicolors
colorscheme gruvbox-material

set noruler
set showtabline=2
set cursorline 
set scrolloff=7

set hlsearch
set incsearch
set ignorecase
set smartcase

set tabstop=4
set shiftwidth=4
set expandtab
set guicursor=
