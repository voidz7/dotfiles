! vim:ft=xdefaults:

!!! Xterm
*internalBorder: 40
*selectToClipboard: true
*renderFont: true
XTerm.vt100.faceName: xft:Cascadia Mono:size=12
XTerm*geometry: 66x22
Xterm*vt100.translations: #override \n\
    Shift Ctrl <KeyPress> v:insert-selection(CLIPBOARD) \n\
    Shift Ctrl <KeyPress> c:select-set(CLIPBOARD)

!!! colors
*.foreground: #f0f0f0
*.background: #0f0f0f
*.color0:     #262626
*.color8:     #4c4c4c
*.color1:     #ac8a8c
*.color9:     #c49ea0
*.color2:     #8aac8b
*.color10:    #9ec49f
*.color3:     #aca98a
*.color11:    #c4c19e
*.color4:     #8f8aac
*.color12:    #a39ec4
*.color5:     #ac8aac
*.color13:    #c49ec4
*.color6:     #8aabac
*.color14:    #9ec3c4
*.color7:     #e7e7e7
*.color15:    #f5f5f5

!!! xft
Xft.antialias:	1
Xft.hinting:	1
Xft.autohint:	0
Xft.hintstyle:	hintslight
Xft.rgba:	rgb
Xft.lcdfilter:	lcddefault
