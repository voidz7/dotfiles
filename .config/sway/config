# vars
set $mod Mod4
set $alt Mod1
set $term foot
set $browser firefox-wayland
set $wal /home/voidz/Pictures/wither.jpg
set $colo #4c4c4c

# theming

output * bg $wal fill
titlebar_padding 15

client.focused $colo $colo $colo $colo $colo
client.unfocused $colo $colo $colo $colo $colo

# inputs
input type:keyboard {
    repeat_delay 200
    repeat_rate 50
}

input "1739:32521:Synaptics_TM3252-001" {
       dwt enabled
       tap enabled
       middle_emulation enabled
}


# make sway basically a floating compositor
for_window [app_id=".*"] floating enable

# keybinds
bindsym $mod+Return exec $term
bindsym $mod+w exec $browser
bindsym $mod+f fullscreen
bindsym $mod+s floating toggle
bindsym $mod+c move position center


floating_modifier $mod normal
focus_follows_mouse always

bindsym $mod+Shift+e exit
bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4

##scrot utils
bindsym print exec grim - | swappy -f -
bindsym Shift+print exec grim -g "$(slurp)" - | swappy -f -

##change focus 
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

#move focus window 
bindsym $mod+h move left
bindsym $mod+j move down
bindsym $mod+k move up
bindsym $mod+l move right

exec_always --no-startup-id /usr/lib/polkit-1/polkitd
exec_always --no-startup-id dunst

bindsym $alt+h resize shrink width 10px
bindsym $alt+j resize grow height 10px
bindsym $alt+k resize shrink height 10px
bindsym $alt+l resize grow width 10px

bindsym XF86AudioRaiseVolume exec pamixer -i 10 
bindsym XF86AudioLowerVolume exec pamixer -d 10 
bindsym XF86AudioMute exec pamixer -t 
